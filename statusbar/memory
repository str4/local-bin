#!/bin/sh

case $BLOCK_BUTTON in
	1) notify-send "Ô°ö Memory hogs" "$(ps axch -o cmd:15,%mem --sort=-%mem | head)" ;;
	2) setsid -f "$TERMINAL" -e htop ;;
	3) notify-send "Ô°ö Memory module" "\- Shows Memory Used/Total.
- Click to show memory hogs.
- Middle click to open htop." ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

free -m | awk 'NR==2{printf "[ üóÑÔ∏è MEM: %s/%sMB (%.2f%%) ]\n", $3,$2,$3*100/$2 }'
